<h1 style="text-align:center; padding: 30px;" class='pull-left'>Admin Manager</h1>
<%= render 'admin/shared/nav' %>
<div class='clearfix'></div>
<hr>
<div class="container">
  <div class="row">
    <div class="col-md-12">
      <div class="panel panel-primary">
        <h2 class='pull-left'>
          Last 3 Users
        </h2>
        <hr>
        <table class="table">
          <thead class="thead-dark">
            <th scope="col">ID</th>
            <th scope="col">Email</th>
            <th scope="col">Signed Up</th>
          </thead>
          <tbody>
            <%- User.ordered.limit(3).each do |user| %>
              <tr>
                <th scope="row"><%= user.id %></th>
                <td><%= user.email %></td>
                <td><%= user.created_at.strftime("%d %b. %Y") %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
        <div class="panel-body text-center">
          <%= link_to 'See all...', user_admin_allusers_path %>
        </div>
      </div>
    </div>
    <div class="col-md-12">
      <div class="panel panel-primary">
        <h2 class='pull-left'>
          Last 10 Links
        </h2>
        <hr>
        <table class="table">
          <thead class="thead-dark">
            <th scope="col">ID</th>
            <th scope="col">Long Link</th>
            <th scope="col">Shortener Link</th>
            <th scope="col">Time</th>
          </thead>
          <tbody>
            <%- Link.ordered.limit(10).each do |link| %>
              <tr>
                <th scope="row"><%= link.id %></th>
                <td><%= link.original_url %></td>
                <td><%= link.lookup_code %></td>
                <td><%= link.created_at.strftime("%d %b. %Y") %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
        <div class="panel-body text-center">
          <%= link_to 'See all...', user_admin_alllinks_path %>
        </div>
      </div>
    </div>
  </div>
</div>
